---
layout: layout.njk
title: Photos
snippet: Like an instagram but mine
pagination:
  data: collections.photo
  size: 10
  reverse: true
  alias: posts
---

<div class="wrapper wrapper--full">

<div class="stack">
	<header class="page-header border">
		<h1>Photos</h1>
	</header>
	<div class="photo-grid">
	{% for post in posts %}
		<figure class="photo ">
			{# <div class="photo-header"><img class="avatar" src="/assets/profile-pic-{{ [1,2,3,4,5,6,7,8,9] | random }}.jpeg" alt="Random Photo of Matt"> matthewbeta</div> #}
			<a href="{{ post.url | url }}"><img src="{{ post.data.src }}" alt="{{ post.data.alt }}"></a>
			{# <figcaption>
			{% if post.data.caption %}<p><strong>matthewbeta</strong> {{ post.data.caption }}</p>{% endif %}
			<time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>
			</figcaption> #}
		</figure>
	{% endfor %}
	</div>
</div>

<nav class="pagination">

{% if pagination.previousPageLink %}
<a href="{{ pagination.previousPageHref }}">Newer</a>
{% else %}
<span aria-hidden="true"></span>
{% endif %}

{% if pagination.nextPageLink %}
<a href="{{ pagination.nextPageHref }}">Older</a>
{% endif %}

</nav>

</div>

<div class="wrapper"></div>