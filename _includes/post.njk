---
layout: layout.njk
---

<div class="wrapper">
	<article class="stack">
		<header class="page-header">
				<h1>{{ title }}</h1> 
			<time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time> 
		</header>
		{{ content | safe }}

		{% if link %}
			<p class="flex">
				<a href="{{ link }}" class="flex align-center">Direct Link&nbsp;
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" aria-hidden>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
					</svg>
				</a>
			</p>
		{% endif %}

	</article>
</div>